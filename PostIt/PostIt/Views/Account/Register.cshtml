@model PostIt.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрација";
}

<div class="login-form">
    <div class="container">
        <div class="row">
            <div class="col-md-5">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>@ViewBag.Title</h2>
                    <h4>Креирајте ја вашата сметка</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstSecondName, new { @class = "" })
                        <div class="">
                            @Html.TextBoxFor(m => m.FirstSecondName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone, new { @class = "" })
                        <div class="">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "" })
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "" })
                                <div class="">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                                <div class="">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" />
                            Се согласувам со правата на користење, политика на приватност и користење на колачиња.
                        </label>
                    </div>
                    <div class="form-group">
                        <div class="">
                            <input type="submit" class="btn btn-primary" value="Креирај сметка" />
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
